
.container-fluid
  width 100%
  display flex
  flex-flow column nowrap
  box-sizing border-box
  .container-fluid-spin
    height 100%
  .ant-spin-nested-loading
    height 100%
    .ant-spin-container
      height 100%
    .ant-spin
      &.ant-spin-spinning
        max-height: 100%!important
  .container-fluid-main
    width 100%
    height 100%
    display flex
    flex-flow column nowrap
    .container-fluid-scroll
      border-radius 3px
      height auto
      max-height 100%
      flex 1
    .container-fluid-scroll-margin
      padding 20px 0
      margin 0 20px